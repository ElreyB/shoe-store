<div class="panel">
  <div class="panel-heading store">
    <h3>
      <div class="row">
        <div class="col-xs-1 col-xs-offset-3 store-emoji">
          ğŸ‘Ÿ
        </div>
        <div class="col-xs-4">
          Add Shoe Brand to Database
        </div>
        <div class="col-xs-1 store-emoji">
          ğŸ‘Ÿ
        </div>
      </div>
    </h3>
    <form class="" action="/add_brand" method="post">
      <div class="row">
        <div class="col-xs-5">
          <div class="form-group">
            <label for="name">Brand Name:</label>
            <input type="text" name="name" class="form-control">
          </div>
        </div>
        <div class="col-xs-5">
          <div class="form-group">
            <label for="name">Brand Price:</label>
            <input type="number" name="price" class="form-control" step="1" min="1">
          </div>
        </div>
        <div class="col-xs-2 button">
          <button type="submit" name="button" class="btn store">Add Brand</button>
        </div>
      </div>
    </form>
  </div>
  <div class="panel-body">
    <% if @brands.any? %>
      <% @brands.each do |brand| %>
      <div class="row">
        <div class="col-xs-6">
          <ul>
            <li class="store-li"><a href="/brand/<%= brand.id %>"> <%= brand.name %> </a></li>
          </ul>
        </div>
        <div class="col-xs-6">
          <ul>
            <li class="store-li"> <%= brand.price %> </li>
          </ul>
        </div>
      </div>
      <% end %>
    <% else %>
      <p>Currently there are no brands in your database</p>
    <% end %>
  </div>
</div>
