<div class="panel">
  <div class="panel-heading store">
    <div class="row">
      <div class="col-xs-10">
        <h3 class="panel-title"> <%= @brand.name %>  Whole Sale Price: <%= @brand.price %> </h3>
      </div>
      <div class="col-xs-2">
        <form class="" action="/delete_brand/<%= @brand.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" name="button" class="btn store">Delete Brand</button>
        </form>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-6">
        <div class="well store">
          <form class="" action="/update_name/brand/<%= @brand.id %>" method="post">
            <div class="form-group">
              <label for="update_name">Change Brand Name:</label>
              <input type="hidden" name="_method" value="patch">
              <div class="row">
                <div class="col-xs-8">
                  <input type="text" name="update_name" class="form-control">
                </div>
                <div class="4">
                  <button type="submit" name="button" class="btn store">Update Brand Name</button>
                </div>
              </div>
            </div>
          </form>
          <form class="" action="/update_price/brand/<%= @brand.id %>" method="post">
            <div class="form-group">
              <label for="update_price">Change Brand Price:</label>
              <input type="hidden" name="_method" value="patch">
              <div class="row">
                <div class="col-xs-8">
                  <input type="number" name="update_price" class="form-control" step="1" min="1" placeholder="only whole numbers(i.e. 34, 899, ..)">
                </div>
                <div class="col-xs-4">
                  <button type="submit" name="button" class="btn store">Update Brand Price</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="well store">
          <% if @brand.stores.any? %>
            <% @brand.stores.each do |store| %>
              <ul>
                <li class="store-li"><a href="/store/<%= store.id %>"> <%= store.name %> </a></li>
              </ul>
            <% end %>
          <% else %>
            <p>Currently no stores sells this brand.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
