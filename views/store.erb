
<div class="panel">
  <div class="panel-heading store">
    <div class="row">
      <div class="col-xs-10">
        <h3 class="panel-title"> <%= @store.name %> </h3>
      </div>
      <div class="col-xs-2">
        <form class="" action="/delete_store/<%= @store.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" name="button" class="btn store">Delete Store</button>
        </form>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-6">
        <div class="well store">
          <form class="" action="/update_name/store/<%= @store.id %>" method="post">
            <div class="form-group">
              <label for="update_name">Change Store Name:</label>
              <input type="hidden" name="_method" value="patch">
              <div class="row">
                <div class="col-xs-8">
                  <input type="text" name="update_name" class="form-control">
                </div>
                <div class="col-xs-3">
                  <button type="submit" name="button" class="btn store">Update Store Name</button>
                </div>
              </div>
            </div>
          </form>
          <form class="" action="/add_brand/<%= @store.id %>" method="post">
            <div class="form-group">
              <label for="new-brand">New Shoe Brand:</label>
              <div class="row">
                <div class="col-xs-8">
                  <input type="text" name="name" class="form-control">
                </div>
                <div class="col-xs-3">
                  <button type="submit" name="button" class="btn store">Add Shoe Brand</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="panel">
          <div class="panel-heading store">
            <h4>Current Brands</h4>
          </div>
          <div class="panel-body">
            <% if @store.brands.any? %>
            <% @store.brands.each do |brand| %>
            <ul>
              <li class="store-li"> <%= brand.name %> </li>
                <ul>
                  <li>Whole Sale: <%= brand.price %> / <%= @store.name %> Price: N/A </li>
                </ul>
            </ul>
            <% end %>
            <% else %>
            <p>Currently no brands in stock.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
