<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-xs-10">
        <h3 class="panel-title"> <%= @store.name %> </h3>
      </div>
      <div class="col-xs-2">
        <form class="" action="/delete_store/<%= @store.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" name="button" class="btn btn-danger">Delete Store</button>
        </form>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-6">
        <div class="well">
          <form class="" action="/update_name/store/<%= @store.id %>" method="post">
            <div class="form-group">
              <label for="update_name">Change Store Name:</label>
              <input type="hidden" name="_method" value="patch">
              <input type="text" name="update_name" class="form-control">
              <button type="submit" name="button" class="btn">Update Store Name</button>
            </div>
          </form>
          <form class="" action="/add_brand/<%= @store.id %>" method="post">
            <div class="form-group">
              <label for="new-brand">New Shoe Brand:</label>
              <input type="text" name="name" class="form-control">
              <label for="brand-price">Brand Price:</label>
              <input type="text" name="price" class="form-control">
              <button type="submit" name="button" class="btn">Add Shoe Brand</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="well">

        </div>
      </div>
    </div>
  </div>
</div>
